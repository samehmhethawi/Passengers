@model IEnumerable<Passengers.ViewModel.TRPASSENGERS_CREDITSVMPDF>



@{
    Layout = null;
}

<head>
    <title>تفاصيل التحويلات والنفقات</title>
    <style>
        .table {
            border: 1px solid #ccc;
            font-size: 16px;
            text-align: center;
            width: 100%;
        }

        tr {
            page-break-inside: avoid;
        }
    </style>
</head>

<body>
    <h1 style="text-align:center;">تفاصيل التحويلات والنفقات</h1>

    <table cellpadding="8" cellspacing="0" class="table" DIR="auto">
        <thead>
            <tr>
                <th style="border: 1px solid; width: auto;">المحافظة</th>
                <th style="border: 1px solid; width: auto;">الرصيد بعد العملية</th>
                <th style="border: 1px solid; width: auto;">تاريخ الرصيد</th>
                <th style="border: 1px solid; width: auto;">قيمة  العملية</th>
                <th style="border: 1px solid; width: auto;">نوع العملية</th>
                <th style="border: 1px solid; width: auto;">تاريخ التثبيت</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: auto; border: 1px solid">@item.CITYNB</td>
                    <td style="width: auto; border: 1px solid">@Convert.ToInt64(item.AMOUNT).ToString("###,###")</td>
                    <td style="width: auto; border: 1px solid">@Convert.ToDateTime(item.CDATEss).ToString("dd/MM/yyyy")</td>
                    <td style="width: auto; border: 1px solid">@Convert.ToInt64(item.ITEM_AMOUNT).ToString("###,###")</td>
                    <td style="width: auto; border: 1px solid">@item.CTYPE</td>
                    <td style="width: auto; border: 1px solid">@Convert.ToDateTime(item.FIXDATE).ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
