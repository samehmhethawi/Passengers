@model IEnumerable<Passengers.ViewModel.CityAndLinesChangePDFVM>



@{
    Layout = null;
}

<head>
    <title>المحافظة والتغيرات على خطوطها</title>
    <style>
        .table {
            border: 1px solid #ccc;
            font-size: 16px;
            text-align: center;
            width: 100%;
        }

        tr {
            page-break-inside: avoid;
        }
    </style>
</head>

<body>
    <h1 style="text-align:center;">المحافظة والتغيرات على خطوطها</h1>

    <table cellpadding="8" cellspacing="0" class="table" DIR="auto">
        <thead>
            <tr>
                
                <th style="border: 1px solid; width: auto;">م</th>

                <th style="border: 1px solid; width: auto;">رمز المعاملة</th>
                <th style="border: 1px solid; width: auto;">نوع المعاملة</th>
                <th style="border: 1px solid; width: auto;">المحافظة</th>
                <th style="border: 1px solid; width: auto;">تاريخ المعاملة</th>
                <th style="border: 1px solid; width: auto;">حالة المعاملة</th>
                <th style="border: 1px solid; width: auto;">اسم الخط الجديد</th>
                <th style="border: 1px solid; width: auto;">اسم الخط المراد الغائه او تغييره</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                
                <td style="width: auto; border: 1px solid">@item.ROW_NUM</td>

                <td style="width: auto; border: 1px solid">@item.NB</td>
                <td style="width: auto; border: 1px solid">@item.PROCEDNAME</td>
                <td style="width: auto; border: 1px solid">@item.CITYNB</td>
                <td style="width: auto; border: 1px solid">@Convert.ToDateTime(item.RECDAT).ToString("dd/MM/yyyy")</td>

                <td style="width: auto; border: 1px solid">@item.RESULT</td>
                <td style="width: auto; border: 1px solid">@item.NEWLINENAME</td>

                <td style="width: auto; border: 1px solid">@item.LINENAME</td>

            </tr>
            }
        </tbody>
    </table>
</body>
