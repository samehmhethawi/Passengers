@model Passengers.Models.AccountModels.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <title>تسجيل الدخول - وزارة النقل | نظام الشكاوى</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicons -->
    <link href="~/Content/v2/img/favicon.png" rel="icon">
    <link href="~/Content/v2/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Bootstrap CSS File -->
    <link href="~/Content/v2/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Libraries CSS Files -->
    <link href="~/Content/v2/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/v2/animate/animate.min.css" rel="stylesheet" />
    <link href="~/Content/v2/ionicons/css/ionicons.min.css" rel="stylesheet" />

    <!-- Main Stylesheet File -->
    <link href="~/Content/v2/style.css" rel="stylesheet" />
    <style>
        .txtfeild{
            border:none;
            background:none;
        }
        .field-validation-error{
            display: inline-block;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Login", "Account", new { Area = "", ViewBag.ReturnUrl }, FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
        <div id="main">
            <section id="logIn">
                <div class="cover_new" style="background-image:url('@(Url.Content("~/Content/v2/img/logIn/cover_new.jpg"))')"></div>
                <div class="container">
                    <div class="wow fadeInDown logInWindow" style="margin-top: 100px;">
                        <div class="logInWindowHeader" style="background: #2B6AD0;">
                            <h4 class="wow fadeInDown" style="animation-delay:0.25s;">وزارة النقل - برنامج المركبات</h4>
                        </div>
                        <div class="logInWindowBody" style="background: #EBECED; border:1px dashed #2B6AD0;">
                            <h3 style="color: #272C33;">تسجيل دخول</h3>
                            <div class="input-box" style="border-color: #272C33;">
                                <span><i class="fa fa-user" style="color: #272C33;"></i></span>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "txtfeild", placeholder = "اسم المستخدم", required = "" })
                                <p><small>@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })</small></p>
                            </div>
                            <div class="input-box" style="border-color: #272C33;">
                                <span><i class="fa fa-lock" style="color: #272C33;"></i></span>
                                @Html.PasswordFor(m => m.Password, new { @class = "txtfeild", placeholder = "كلمة المرور", required = "" })
                                <p><small>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</small></p>
                            </div>
                            <button type="submit" class="btn btn-default btn-default-light"> تسجيل دخول </button>
                            <br />
                            <br />
                            <br />
                            <small style="position:relative; bottom: 0">جميع الحقوق محفوظة - <strong>وزارة النقل &copy;</strong> @DateTime.Now.Year</small>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    }
    <!-- JavaScript Libraries -->
    <script src="~/Scripts/v2/jquery/jquery.min.js"></script>
    <script src="~/Scripts/v2/jquery/jquery-migrate.min.js"></script>
    <script src="~/Scripts/v2/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/v2/easing/easing.min.js"></script>
    <script src="~/Scripts/v2/superfish/hoverIntent.js"></script>
    <script src="~/Scripts/v2/superfish/superfish.min.js"></script>
    <script src="~/Scripts/v2/wow/wow.min.js"></script>
    <script src="~/Scripts/v2/counterup/jquery.waypoints.min.js"></script>
    <script src="~/Scripts/v2/counterup/jquery.counterup.min.js"></script>

    <!-- Contact Form JavaScript File -->
    <script src="~/Scripts/v2/contactform/contactform.js"></script>

    <!-- Template Main Javascript File -->
    <script src="~/Scripts/v2/main.js"></script>
    @Scripts.Render("~/bundles/v2/jqueryval")
</body>
</html>